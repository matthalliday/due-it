group :development do
  gem 'better_errors'
end

group :development, :test do
  gem 'rspec-rails', '~> 2.14.0'
  gem 'shoulda-matchers', '~> 2.3.0'
  gem 'factory_girl_rails', '~> 4.0'
end

group :production do
  gem 'unicorn'
  gem 'rails_12factor'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end