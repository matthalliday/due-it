<!DOCTYPE html>
<html>
<head>
	<title>Due It</title>
	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>

<body>
	<header>
		<h1><%= link_to 'Due It', root_path %></h1>
	</header>

	<nav>
		<ul>
			<li>
				<strong>Add</strong>
				<ul>
					<li><%= link_to 'Task', new_task_path %></li>
					<li><%= link_to 'Milestone', root_path %></li>
					<li><%= link_to 'Project', root_path %></li>
				</ul>
			</li>
			<li>
				<strong>View</strong>
				<ul>
					<li><%= link_to 'Tasks', tasks_path %></li>
					<li><%= link_to 'Milestones', root_path %></li>
					<li><%= link_to 'Projects', root_path %></li>
				</ul>
			</li>
		</ul>
	</nav>

	<div id="content">
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "flash #{key}") %>
		<% end %>

		<%= yield %>
	</div>

	<% debug(params) if Rails.env.development? %>
</body>
</html>