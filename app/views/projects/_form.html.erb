<%= form_for @project do |f| %>
	<%= render 'partials/errors', object: @project %>

	<div class="field">
		<%= f.label :name, 'Name *' %>
		<%= f.text_field :name, class: 'name-field' %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description, rows: 8 %>
	</div>
	<div class="field submit">
		<%= f.submit %>
	</div>
<% end %>