<article>
	<h1><%= @project.name %></h1>
	<div><%= raw @project.description %></div>

	<ul>
		<% @incomplete.each do |task| %>
			<li>
				<h2><%= link_to task.name, [@project, task] %></h2>
				<p>Estimate: <strong><%= task.estimate %></strong></p>
				<p>Due: <strong><%= task.due_date.strftime('%B %-d') %></strong></p>
				<p>Priority: <strong><%= task.priority.titleize %></strong></p>
				<% if task.status == 'incomplete' %>
					<%= link_to 'Complete', complete_task_path(@project, task), method: :put %>
				<% end %>
			</li>
		<% end %>
	</ul>

	<%= link_to 'Add Task', new_project_task_path(@project) %>
	<% if @complete.any? %>
		<%= link_to 'Completed Tasks', completed_tasks_path(@project) %>
	<% end %>
	<%= link_to 'Edit Project', edit_project_path(@project) %>
	<%= link_to 'Remove Project', @project, method: :delete, confirm: 'Are you sure you want to delete this project and all its tasks?' %>
</article>