<div class="project">
	<div class="project-name">
		<h1><%= t(".title") %></h1>
	</div>

	<div class="info-bar clearfix">
		<p class="message">Fields with an asterisk are required</p>
	</div>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit 'Sign Up' %>
    </div>
  <% end %>
</div><!-- /.project -->
