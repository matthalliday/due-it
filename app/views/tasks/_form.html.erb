<%= form_for [@project, @task] do |f| %>
	<%= render 'partials/errors', object: @task %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :estimate %><br />
		<%= f.text_field :estimate %>
	</div>
	<div class="field">
		<%= f.label :due_date %><br />
		<%= f.date_select :due_date,
		                  start_year: Time.now.year,
		                  end_year: Time.now.year + 1,
		                  order: [:month, :day] %>
	</div>
	<div class="field">
		<%= f.label :priority %><br />
		<%= f.select :priority, options_for_select(
			                        [['Low','low'],
			                        ['Normal','normal'],
			                        ['High','high']],
			                        'normal') %>
	</div>
	<div class="field">
		<%= f.label :status %><br />
		<%= f.select :status, options_for_select(
			                        [['Incomplete','incomplete'],
			                        ['Complete','complete']],
			                        'incompete') %>
	</div>
	<div class="field submit">
		<br />
		<%= f.submit %>
	</div>
<% end %>