<% # TODO refactor views for all due date based views %>
<article>
	<h1>Due this week</h1>
	<%= raw "Looks like there's nothing due this week" if @tasks.empty? %>

	<ul>
		<% @tasks.each do |task| %>
			<li>
				<h2><%= link_to task.name, Project.find(task.project_id) %></h2>
				<p>Due: <strong><%= task.due_date.strftime('%B %-d') %></strong></p>
			</li>
		<% end %>
	</ul>
</article>