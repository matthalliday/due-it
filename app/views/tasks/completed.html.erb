<section>
	<h1>Completed Tasks</h1>

	<article class="project">
		<div class="name">
			<h1><%= link_to @project.name, @project %></h1>
		</div>

		<div class="info-bar clearfix">
			<p class="count"><%= pluralize(@tasks.count, 'completed task', 'completed tasks') %></p>
		</div>

		<ul class="task-list">
			<% @tasks.each do |task| %>
				<li>
					<h2><%= link_to task.name, [@project, task] %></h2>

					<div class="meta clearfix">
						<p>Estimate: <%= task.estimate %></p>
						<p>Due: <%= task.due_date.strftime('%B %-d') %></p>
						<p>Priority: <%= task.priority.titleize %></p>
						<%= link_to 'Edit', edit_project_task_path(@project, task), class: 'edit' %>
					</div>
				</li>
			<% end %>
		</ul><!-- /.task-list -->
	</article><!-- /.project -->
</section>