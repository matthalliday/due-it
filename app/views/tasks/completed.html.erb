<article class="project">
	<div class="name">
		<h1><%= link_to @project.name, @project %></h1>
		<span class="highlight"></span>
	</div>

	<div class="info-bar clearfix">
		<p class="count"><%= pluralize(@project.complete_tasks, 'completed task', 'completed tasks') %></p>
	</div>

	<ul class="task-list">
		<% @tasks.each do |task| %>
			<li>
				<h2><%= link_to task.name, [@project, task] %></h2>

				<div class="meta clearfix">
					<p>Estimated <%= task.estimate %></p>
					<p>Due on <%= task.due_date.strftime('%B %-d') %></p>
					<%= link_to 'Mark as Incomplete', mark_task_incomplete_path(@project, task), method: :put, class: 'task-action complete' %>
				</div>
			</li>
		<% end %>
	</ul><!-- /.task-list -->
</article><!-- /.project -->