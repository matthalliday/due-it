<article class="project">
	<div class="name">
		<h1><%= link_to @project.name, @project %></h1>
	</div>

	<div class="info-bar clearfix">
		<p class="count"><%= pluralize(@project.tasks.incomplete.count, 'incomplete task', 'incomplete tasks') %></p>
		<%= link_to 'Add Task', new_project_task_path(@project), class: 'button' %>
	</div>

	<ul class="task-list">
		<li>
			<h2><%= @task.name %></h2>

			<div class="meta clearfix">
				<p>Estimate: <%= @task.estimate %></p>
				<p>Due: <%= @task.due_date.strftime('%B %-d') %></p>
				<p>Priority: <%= @task.priority.titleize %></p>

				<% if @task.status == 'incomplete' %>
					<%= link_to 'Complete', complete_task_path(@project, @task), method: :put, class: 'task-action complete' %>
				<% end %>
			</div>
		</li>
	</ul><!-- /.task-list -->
</article><!-- /.project -->

<%= link_to 'Edit', edit_project_task_path(@project, @task) %>
<%= link_to 'Remove', [@project, @task], method: :delete, confirm: 'Are you sure you want to delete this task?' %>