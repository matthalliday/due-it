<article>
	<h1>Add a task</h1>

	<%= form_for @task do |f| %>
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :description %><br />
			<%= f.text_area :description %>
		</div>
		<div class="field">
			<%= f.label :estimate %><br />
			<%= f.text_field :estimate %>
		</div>
		<div class="field">
			<%= f.label :due_date %><br />
			<%= f.date_select :due_date,
			                  start_year: Time.now.year,
			                  end_year: Time.now.year + 1,
			                  order: [:month, :day] %>
		</div>
		<div class="field">
			<%= f.label :priority %><br />
			<%= f.select :priority, options_for_select(
				                        [['Low','low'],
				                        ['Normal','normal'],
				                        ['High','high']],
				                        'normal') %>
		</div>
		<div class="field submit">
			<br />
			<%= f.submit %>
		</div>
	<% end %>
</article>
