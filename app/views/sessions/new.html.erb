<div class="project">
	<div class="project-name">
		<h1>Log In</h1>
	</div>

	<div class="info-bar clearfix">
		<p class="message">Fields with an asterisk are required</p>
		<%= link_to 'Forgot password?', new_password_reset_path, class: 'button' %>
	</div>

	<%= form_tag sessions_path do %>
		<div class="field">
			<%= label_tag :email, 'Email *' %>
			<%= text_field_tag :email, params[:email], autocapitalize: 'off' %>
		</div>
		<div class="field">
			<%= label_tag :password, 'Password *' %>
			<%= password_field_tag :password %>
		</div>
		<div class="field checkbox">
			<%= check_box_tag :remember_me, 1, true %>
    		<%= label_tag :remember_me, 'Keep me signed in for 2 weeks' %>
		</div>
		<div class="field submit">
			<%= submit_tag "Log in" %>
		</div>
	<% end %>
</div><!-- /.project -->